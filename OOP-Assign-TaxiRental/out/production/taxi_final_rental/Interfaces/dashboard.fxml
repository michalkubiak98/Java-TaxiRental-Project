        <JFXButton fx:id="logOut" layoutX="10.0" layoutY="11.0" onAction="#logOutAction" prefHeight="32.0"
                   prefWidth="71.0" text="Log Out" textFill="#797979">
            <font>
                <Font size="14.0"/>
            </font>
        </JFXButton>
        <JFXButton fx:id="exitbtn" alignment="CENTER" contentDisplay="GRAPHIC_ONLY" graphicTextGap="0.0" layoutX="297.0"
                   layoutY="15.0" onAction="#exitAction" prefHeight="21.0" prefWidth="21.0" ripplerFill="#f5f5f5"
                   textFill="WHITE">
            <font>
                <Font size="1.0"/>
            </font>
            <graphic>
                <ImageView fitHeight="21.0" fitWidth="27.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@images/error.png"/>
                    </image>
                </ImageView>
            </graphic>
        </JFXButton>

    </children>
</AnchorPane>
